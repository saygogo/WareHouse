<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout

        android:layout_width="170dp"
        android:layout_height="200dp"
        android:background="#22000000"
        android:orientation="vertical">

        <ImageView
            android:background="@drawable/ic_present_1"
            android:id="@+id/class_image"
            android:layout_width="170dp"
            android:layout_height="140dp"
            android:layout_gravity="center" />

        <TextView
            android:id="@+id/class_goods_name"
            android:textSize="10sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:lines="1"
            android:text="独家首发#%$#%$#%$^#%^#%$#%" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/class_brand_name"
                android:textSize="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="JES古斯" />

            <LinearLayout
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:background="@drawable/ic_favor"
                    android:layout_width="15dp"
                    android:layout_height="15dp" />
                <TextView
                    android:id="@+id/class_like_count"
                    android:textSize="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="0" />
            </LinearLayout>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/class_price"
                android:textSize="10sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="￥89.00" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true">

                <TextView
                    android:id="@+id/class_discount_price"
                    android:textSize="10sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="￥128.00" />

                <View
                    android:id="@+id/class_view"
                    android:visibility="gone"
                    android:layout_width="45dp"
                    android:layout_height="1dp"
                    android:layout_centerInParent="true"
                    android:background="#000000" />
            </RelativeLayout>
        </RelativeLayout>


    </LinearLayout>
</LinearLayout>