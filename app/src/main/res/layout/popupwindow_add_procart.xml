<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#88000000">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="320dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/cart_image"
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:layout_marginLeft="140dp"
                android:layout_marginTop="55dp"
                android:background="@drawable/gray_radius" />

            <TextView
                android:id="@+id/cart_name"
                android:padding="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="JE"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/cart_details"
                android:padding="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="{独家发售}"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/cart_price"
                android:padding="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="98"
                android:textColor="#0000ff" />
        </LinearLayout>
        <View
            android:background="#000000"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>


        <com.example.dontworry.warehouse.classifcationactivity.AddSubView
            android:id="@+id/nas_goodinfo_num"
            app:maxValue="12"
            app:minValue="1"
            app:numberAddBackground="@drawable/ease_blue_add"
            app:numberSubBackground="@drawable/address_default"
            app:value="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp" />
        <Button

            android:background="#880000ff"
            android:id="@+id/bt_goodinfo_confim"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="确定"
            android:textColor="@android:color/white" />

    </LinearLayout>

</LinearLayout>